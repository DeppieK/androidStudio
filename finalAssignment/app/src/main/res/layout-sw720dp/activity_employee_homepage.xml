<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitEventActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="570dp"
            android:layout_height="985dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/lavender_border"
            android:orientation="vertical"
            android:padding="70dp">

            <TextView
                android:layout_width="412dp"
                android:layout_height="82dp"
                android:text="@string/chooseAnAction"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textSize="25sp" />


            <Button
                android:id="@+id/buttonEventList"
                android:layout_width="409dp"
                android:layout_height="97dp"
                android:layout_marginTop="20dp"
                android:onClick="eventList"
                android:text="@string/viewEventList"
                android:textSize="25sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/buttonStatistics"
                android:layout_width="409dp"
                android:layout_height="97dp"
                android:layout_marginTop="20dp"
                android:onClick="viewStatistics"
                android:text="@string/viewStatistics"
                android:textSize="25sp"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>